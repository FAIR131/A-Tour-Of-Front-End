.top-menu{
  display: flex;
  margin-bottom: 20px;
}
.top-menu view{
  width: 50%;
  text-align: center;
}
.top-menu view.active{
  color: #ff5f16;
}
.top-menu view.active text{
  border-bottom: 2px solid #ff5f16;
  padding: 10px 0;
}
.poster{
  width: 66px;
}
.film-list{
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin: 10px 0;
}
.film-list .desc{
  width: 160px;
  margin: 0 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}